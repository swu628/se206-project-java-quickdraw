<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="720.0" prefWidth="960.0" styleClass="backgroundTwo" stylesheets="@../css/style.css"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nz.ac.auckland.se206.GameController">
    <children>
        <AnchorPane fx:id="game" disable="true" prefHeight="720.0" prefWidth="960.0" visible="false">
            <children>
                <VBox alignment="CENTER" layoutY="-3.0" prefWidth="960.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" styleClass="title"
                               text="Quick, Draw! SE206 Edition">
                            <font>
                                <Font size="25.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <AnchorPane layoutX="29.0" layoutY="25.0" maxWidth="887.0" prefHeight="674.0" prefWidth="887.0"
                            styleClass="gameBody">
                    <children>
                        <Label layoutX="41.0" layoutY="53.0" styleClass="subHeading" text="Predictions: ">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </Label>
                        <Label fx:id="wordLabel" alignment="CENTER_RIGHT" layoutX="499.0" layoutY="54.0"
                               prefHeight="41.0" prefWidth="373.0" styleClass="subHeading" text="Word"
                               textAlignment="CENTER">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <TextArea fx:id="predictionsList" editable="false" layoutX="26.0" layoutY="112.0"
                                  prefHeight="566.0" prefWidth="433.0"
                                  text="Prediction&#10;Prediction&#10;Prediction&#10;Prediction&#10;The Great Wall of China - 100.00%&#10;Prediction&#10;Prediction&#10;Prediction&#10;Prediction&#10;Prediction"/>
                        <Label fx:id="timerLabel" alignment="CENTER_RIGHT" layoutX="499.0" layoutY="107.0"
                               prefHeight="41.0" prefWidth="373.0" styleClass="subHeading" text="Time Left:"
                               textAlignment="CENTER">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </Label>
                        <Label fx:id="predDirectionLabel" layoutX="233.0" layoutY="53.0" styleClass="subHeading"
                               text="Prediction Direction">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
                <AnchorPane layoutX="480.0" layoutY="160.0" prefHeight="534.0" prefWidth="433.0">
                    <children>
                        <Pane layoutX="-19.0" layoutY="17.0" maxHeight="-Infinity" maxWidth="-Infinity"
                              minHeight="-Infinity" minWidth="-Infinity" prefHeight="441.0" prefWidth="441.0"
                              style="-fx-border-color: rgb(198, 198,198); -fx-background-color: rgb(243, 243, 243); -fx-border-width: 1;"
                              stylesheets="@../css/style.css">
                            <children>
                                <Canvas fx:id="canvas" height="439.0" layoutX="1.0" layoutY="1.0" width="439.0">
                                    <cursor>
                                        <Cursor fx:constant="HAND"/>
                                    </cursor>
                                </Canvas>
                            </children>
                        </Pane>
                        <HBox alignment="CENTER_RIGHT" layoutX="46.0" layoutY="459.0" prefHeight="45.0"
                              prefWidth="375.0" spacing="15.0">
                            <children>
                                <ImageView fx:id="toolImage" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true"
                                           preserveRatio="true"/>
                                <Button fx:id="penButton" mnemonicParsing="false" onAction="#onSwitchToPen" text="Pen">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="eraserButton" mnemonicParsing="false" onAction="#onSwitchToEraser"
                                        text="Eraser">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#onClear" text="Clear">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="preGamePane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" onMouseClicked="#onStartDrawing" prefHeight="480.0" prefWidth="640.0"
                    styleClass="preGameBody" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label id="category" fx:id="preGameWordLabel" alignment="CENTER" layoutY="290.0" prefHeight="23.0"
                       prefWidth="960.0" text="Word: " textAlignment="CENTER">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Label>
                <Label id="prompt" alignment="CENTER" contentDisplay="CENTER" layoutX="161.0" layoutY="353.0"
                       prefHeight="23.0" prefWidth="640.0" text="Click anywhere to begin drawing"
                       textAlignment="CENTER">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="accuracyDifficultyLabel" layoutX="78.0" layoutY="85.0" prefHeight="55.0" prefWidth="265.0"
                       styleClass="difficultySettings" text="Accuracy: MEDIUM">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="wordDifficultyLabel" layoutX="78.0" layoutY="140.0" prefHeight="55.0" prefWidth="265.0"
                       styleClass="difficultySettings" text="Words: MEDIUM">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="timeDifficultyLabel" alignment="CENTER_RIGHT" layoutX="637.0" layoutY="140.0"
                       prefHeight="55.0" prefWidth="265.0" styleClass="difficultySettings" text="Time: MEDIUM"
                       textAlignment="RIGHT">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="confidenceDifficultyLabel" alignment="CENTER_RIGHT" layoutX="637.0" layoutY="86.0"
                       prefHeight="55.0" prefWidth="265.0" styleClass="difficultySettings" text="Confidence: MASTER"
                       textAlignment="RIGHT">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </AnchorPane>
        <AnchorPane fx:id="postGame" disable="true" layoutY="125.0" prefHeight="480.0" prefWidth="640.0"
                    styleClass="postGameBody" visible="false">
            <children>
                <Label fx:id="postGameOutcomeLabel" alignment="CENTER" contentDisplay="CENTER" layoutY="37.0"
                       prefHeight="23.0" prefWidth="960.0" styleClass="title" text="Game Outcome"
                       textAlignment="CENTER">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Label>
                <Button alignment="CENTER" contentDisplay="CENTER" layoutY="165.0" mnemonicParsing="false"
                        onAction="#onSaveDrawing" prefWidth="960.0" text="Save drawing" textAlignment="CENTER">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" layoutY="220.0" mnemonicParsing="false"
                        onAction="#onResetGame" prefWidth="960.0" text="Play again">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" layoutY="275.0" mnemonicParsing="false"
                        onAction="#onGameMenu" prefWidth="960.0" text="Game Menu">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" layoutY="329.0" mnemonicParsing="false"
                        onAction="#onQuitGame" prefWidth="960.0" text="Quit game" textAlignment="CENTER">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
