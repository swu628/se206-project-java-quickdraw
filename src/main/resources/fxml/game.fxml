<AnchorPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.GameController">
    <children>
        <VBox fx:id="game" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" spacing="5.0" style="-fx-background-color: white;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="124.0" layoutY="14.0" prefHeight="23.0" prefWidth="355.0" text="Quick, Draw! SE206 Edition" textAlignment="CENTER">
                    <font>
                        <Font size="25.0" />
                    </font>
                </Label>
                <HBox>
                    <children>
                        <Label fx:id="categoryLabel" prefHeight="23.0" prefWidth="355.0" text="Category" textAlignment="CENTER">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="timerLabel" alignment="CENTER_RIGHT" prefHeight="23.0" prefWidth="355.0" text="Time Left" textAlignment="CENTER">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Predictions: ">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="predictionsList" text="Predictions List">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0">
                            <children>
                        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="302.0" prefWidth="422.0" style="-fx-border-color: black;">
                           <children>
                                      <Canvas fx:id="canvas" height="300.0" layoutX="1.0" layoutY="1.0" width="420.0">
                                          <cursor>
                                              <Cursor fx:constant="HAND" />
                                          </cursor>
                                      </Canvas>
                           </children>
                        </Pane>
                                <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <Button fx:id="penButton" mnemonicParsing="false" onAction="#onSwitchToPen" text="Pen">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="eraserButton" mnemonicParsing="false" onAction="#onSwitchToEraser" text="Eraser">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#onClear" text="Clear">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>

            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
        <AnchorPane fx:id="preGamePane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#onStartDrawing" prefHeight="480.0" prefWidth="640.0" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="preGameCategoryLabel" alignment="CENTER" layoutX="143.0" layoutY="159.0" prefHeight="23.0" prefWidth="355.0" text="Category:" textAlignment="CENTER" AnchorPane.topAnchor="150.0">
                    <font>
                        <Font size="25.0" />
                    </font>
                </Label>
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="143.0" layoutY="228.0" prefHeight="23.0" prefWidth="355.0" text="Click anywhere to begin drawing" textAlignment="CENTER">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </AnchorPane>
        <VBox fx:id="postGame" alignment="CENTER" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" spacing="5.0" style="-fx-background-color: white;" visible="false">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label fx:id="postGameOutcomeLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="23.0" prefWidth="355.0" text="Game Outcome" textAlignment="CENTER">
                    <font>
                        <Font size="25.0" />
                    </font>
                </Label>
                <Button mnemonicParsing="false" onAction="#onSaveDrawing" text="Save drawing">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onResetGame" text="Play again">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onGameMenu" text="Game Menu">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            <Button mnemonicParsing="false" onAction="#onQuitGame" text="Quit game">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
