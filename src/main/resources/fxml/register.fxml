<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="480.0" prefWidth="640.0" styleClass="background" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.RegisterController">
   <children>
      <Label alignment="CENTER" layoutX="153.0" layoutY="81.0" prefHeight="23.0" prefWidth="355.0" text="Create an Account" textAlignment="CENTER">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" layoutX="181.0" layoutY="150.0" prefHeight="200.0" prefWidth="300.0" spacing="5.0">
         <children>
            <Text fx:id="text" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your username">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <TextField fx:id="newUsernameField" prefHeight="30.0" promptText="Username">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#onSignUp" prefHeight="35.0" prefWidth="80.0" text="Sign up">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBack" prefHeight="35.0" prefWidth="80.0" text="Go Back">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
