<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="960.0" styleClass="backgroundOne" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.RegisterController">
   <children>
      <Label alignment="BOTTOM_CENTER" contentDisplay="CENTER" layoutY="107.0" prefWidth="960.0" styleClass="title" text="Create an Account" textAlignment="CENTER">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <AnchorPane layoutY="256.0" prefHeight="292.0" prefWidth="960.0">
         <children>
            <VBox alignment="CENTER" fillWidth="false" layoutX="1.0" layoutY="-5.0" prefWidth="960.0">
               <children>
                  <Text fx:id="text" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="resultText" textAlignment="CENTER">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
            <TextField fx:id="newUsernameField" alignment="CENTER" layoutY="34.0" prefWidth="960.0" promptText="Username">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="signUpButton" alignment="CENTER" contentDisplay="CENTER" layoutX="412.0" layoutY="143.0" mnemonicParsing="false" onAction="#onSignUp" text="Sign up" textAlignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="backButton" alignment="CENTER" contentDisplay="CENTER" layoutX="433.0" layoutY="199.0" mnemonicParsing="false" onAction="#onBack" text="Back" textAlignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
